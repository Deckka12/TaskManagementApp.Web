<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TaskManagementApp</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
	<div class="wrapper">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">Task Management</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto">
						<li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="Index">Задачи</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="Projects" asp-action="Index">Проекты</a></li>
					</ul>

					<ul class="navbar-nav">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link text-white">Привет, @User.Identity.Name!</a>
							</li>
							<li class="nav-item">
								<a class="nav-link btn btn-danger text-white" asp-controller="Users" asp-action="Logout">Выход</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="Users" asp-action="Login">Вход</a>
							</li>
							<li class="nav-item">
								<a class="nav-link btn btn-success text-white" asp-controller="Users" asp-action="Register">Регистрация</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>


		<div class="container content mt-4">
			@RenderBody()
		</div>
	</div>

	<footer class="footer footers text-center py-3 bg-dark text-white">
		<p class="mb-0">&copy; 2024 TaskManagementApp</p>
	</footer>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
