@model List<TaskManagementApp.Application.DTOs.TaskDto>

@{
    ViewData["Title"] = "Список задач";
}

<h2>Список задач</h2>

<a class="btn btn-success mb-3" asp-action="Create">Добавить задачу</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Статус</th>
            <th>Приоритет</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Status</td>
                <td>@task.Priority</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@task.Id">Редактировать</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@task.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
