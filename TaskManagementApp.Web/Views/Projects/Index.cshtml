@model IEnumerable<TaskManagementApp.Application.DTOs.ProjectDTO>

@{
    ViewData["Title"] = "Проекты";
}

<h2>Список проектов</h2>

<a asp-action="Create" class="btn btn-success mb-3">Добавить проект</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
