@model IEnumerable<TaskManagementApp.Application.DTOs.ProjectDTO>

@{
    ViewData["Title"] = "Проекты";
}

<h2 class="mb-4 text-center">📁 Список проектов</h2>

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-success" asp-action="Create">
        <i class="fas fa-plus"></i> Добавить проект
    </a>
</div>

<table class="table table-hover shadow-sm bg-white rounded">
    <thead class="table-dark">
        <tr>
            <th>📌 Название</th>
            <th class="text-center">📝 Описание</th>
            <th class="text-center">⚙ Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center text-muted py-3">Проекты отсутствуют</td>
            </tr>
        }
        else
        {
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Name</td>
                    <td class="text-center">@project.Description</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@project.Id">
                            <i class="fas fa-edit"></i> Редактировать
                        </a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@project.Id"
                           onclick="return confirm('Вы уверены, что хотите удалить проект?');">
                            <i class="fas fa-trash-alt"></i> Удалить
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
