@model TaskManagementApp.Application.DTOs.UserLoginDto

@{
    ViewData["Title"] = "Вход";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center">
            <h3 class="mb-3">Добро пожаловать!</h3>
            <p class="text-muted">Введите свои данные для входа</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label"><i class="bi bi-envelope"></i> Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Введите email" required />
            </div>
            <div class="mb-3">
                <label class="form-label"><i class="bi bi-lock"></i> Пароль</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Войти</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                @Html.ValidationSummary()
            </div>
        }

        <div class="text-center mt-3">
            <a href="#" class="text-decoration-none">Забыли пароль?</a>
        </div>
    </div>
</div>

